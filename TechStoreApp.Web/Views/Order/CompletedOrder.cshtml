@using TechStoreApp.Web.ViewModels.Orders
@model UserOrderSingleViewModel

<style>
    body {
        background-color: #f8f9fa;
    }

    .order-card {
        margin: 20px auto;
        max-width: 600px;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .order-header {
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<body>
    <div class="container">
        <div class="order-card">
            <div class="order-header">
                <h1 class="h3">Order Details</h1>
            </div>
            <div class="mb-4">
                <h5 class="fw-bold">Order Summary</h5>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Item 1
                        <span>$10.00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Item 2
                        <span>$15.00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total
                        <span class="fw-bold">$25.00</span>
                    </li>
                </ul>
            </div>
            <div class="mb-4">
                <h5 class="fw-bold">Shipping Address</h5>
                <p class="mb-1">John Doe</p>
                <p class="mb-1">123 Main Street</p>
                <p class="mb-1">Cityville, State 12345</p>
                <p>United States</p>
            </div>
            <div class="text-center">
                <button class="btn btn-success" disabled>Order Confirmed</button>
            </div>
        </div>
    </div>
</body>
