@using TechStoreApp.Web.ViewModels
@model ErrorViewModel

@{
    ViewData["Title"] = "Oops! Something went wrong.";
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/error-page.css">
</head>

<div class="error-container">
    <div class="error-code">500</div>
    <h1>Oops! Something went wrong.</h1>
    <p class="error-message">
        An unexpected error occurred while processing your request. We apologize for the inconvenience.
    </p>

    @* Optional Request ID Display *@
    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="error-buttons">
        <a href="/" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Back to Home
        </a>
        <a href="/Contact" class="btn btn-outline-secondary">
            <i class="bi bi-envelope"></i> Contact Support
        </a>
    </div>
</div>

<footer>
    <p>&copy; @DateTime.Now.Year TechStore. All Rights Reserved.</p>
    <p>
        Need help? Visit our <a href="/help" class="text-decoration-none">Help Center</a>.
    </p>
</footer>


